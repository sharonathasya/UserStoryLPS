@model FrontendApp.Models.Attachment

<style>
    .vertical-line {
        border-left: 1px solid #ddd;
        height: 100%;
    }
</style>
<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-5"> <strong>Input Data Attachment</strong> </h1>
                                </div>
                                <form asp-action="SubmitData" class="user">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label>Id</label>
                                            <input type="text" asp-for="Id" class="form-control form-control" id="input1" placeholder="Input Agreement Number">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>File Name</label>
                                            <input type="text" asp-for="FileName" class="form-control form-control" id="input2" placeholder="Input Branch ID">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Created by</label>
                                            <input type="text" asp-for="CreatedBy" class="form-control form-control" id="input3" placeholder="Input No Attachment">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Created Date Time</label>
                                            <input type="text" asp-for="CreatedDateTime" class="form-control form-control" id="datepickerAttachmentin" readonly placeholder="Input Tanggal Attachment IN">
                                        </div>
                                        
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <a href="@Url.Action("ListData", "Attachment")" class="btn btn-secondary btn-user btn-block">
                                                Kembali
                                            </a>
                                        </div>
                                        <div class="col-md-6">
                                            <button type="submit" class="btn btn-primary  btn-user btn-block">Simpan</button>
                                        </div>
                                    </div>
                                </form>
                                <hr>
                                
                                <p>LPS Technical Test</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>